{
  "name": "@sway/contracts",
  "version": "0.1.0",
  "description": "Sway NFT core contracts",
  "engines": {
    "node": ">= 14.17.5"
  },
  "repository": "github:SwayNFT/contracts",
  "author": "Sway Team",
  "license": "AGPL-3.0-or-later",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "celo",
    "smart-contracts",
    "hardhat",
    "solidity",
    "NFT",
    "collectibles"
  ],
  "files": [
    "contracts",
    "deployments",
    "artifacts",
    "dist"
  ],
  "devDependencies": {
    "@celo/contractkit": "1.5.2",
    "@ethersproject/address": "5.5.0",
    "@ethersproject/bignumber": "5.7.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@openzeppelin/contracts": "4.9.2",
    "@openzeppelin/contracts-upgradeable": "4.5.2",
    "@openzeppelin/hardhat-upgrades": "1.28.0",
    "@sway/events": "^0.1.0",
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "@types/chai": "4.3.5",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.68",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "@ubeswap/hardhat-celo": "0.9.0",
    "chai": "4.3.7",
    "chai-ethers": "0.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.8.0",
    "ethers": "5.5.4",
    "fs-extra": "10.0.1",
    "glob": "7.2.0",
    "hardhat": "2.8.4",
    "hardhat-contract-sizer": "2.4.0",
    "hardhat-deploy": "0.10.6",
    "hardhat-gas-reporter": "1.0.9",
    "hardhat-tracer": "1.0.0-alpha.6",
    "keccak256": "1.0.6",
    "merkletreejs": "0.2.31",
    "mocha": "9.2.2",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "reflect-metadata": "0.1.13",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.20",
    "ts-generator": "0.1.1",
    "ts-node": "10.4.0",
    "typechain": "7.0.1",
    "typescript": "4.5.5"
  },
  "scripts": {
    "prepare": "node ./.setup.js && hardhat typechain",
    "lint": "eslint \"**/*.{js,ts}\" && solhint contracts/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix contracts/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "compile": "hardhat compile",
    "void:deploy": "hardhat deploy",
    "test": "hardhat compile && cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "dev": "hardhat node --watch --export contractsInfo.json",
    "local:dev": "hardhat --network localhost deploy --watch",
    "execute": "node ./_scripts.js run",
    "deploy": "node ./_scripts.js deploy",
    "export": "node ./_scripts.js export",
    "fork:execute": "node ./_scripts.js fork:run",
    "fork:deploy": "node ./_scripts.js fork:deploy",
    "fork:dev": "node ./_scripts.js fork:dev",
    "fork:node": "node ./_scripts.js fork:node",
    "fork:test": "node ./_scripts.js fork:test",
    "compile:clean": "rm -fr artifacts/ cache/",
    "subgraph:config": "hardhat export --export-all deployments.json && node ./_scripts.js subgraph:config",
    "pre:test:slither": "rm -f @openzeppelin && rm -f hardhat && yarn compile:clean && yarn compile --force && ln -s ../../node_modules/@openzeppelin @openzeppelin && ln -s ../../node_modules/hardhat hardhat",
    "post:test:slither": "rm -f @openzeppelin && rm -f hardhat",
    "test:slither": "yarn pre:test:slither && slither . && yarn post:test:slither",
    "build:typescript": "yarn tsc -p ./tsconfig.build.json",
    "build:contracts": "yarn hardhat compile",
    "build": "yarn build:typescript && yarn build:contracts"
  }
}
