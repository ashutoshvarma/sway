{
  "name": "sway",
  "packageManager": "yarn@3.2.0-rc.6",
  "scripts": {
    "lint:contracts": "yarn --cwd ./ng-packages/contracts lint",
    "lint": "yarn lint:contracts && yarn workspaces foreach -pti run lint",
    "test:contracts": "cd ./ng-packages/contracts && yarn test",
    "test": "yarn test:contracts && yarn workspaces foreach -pti run test",
    "contracts:compile": "cd ./ng-packages/contracts && yarn compile",
    "hardhat": "cd ./ng-packages/contracts && yarn hardhat",
    "graph": "cd ./ng-packages/subgraph && yarn graph"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@sway/contracts": "portal:./ng-packages/contracts",
    "@sway/subgraph": "portal:./ng-packages/subgraph"
  }
}
