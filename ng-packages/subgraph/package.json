{
  "name": "sway-alfajores",
  "license": "UNLICENSED",
  "scripts": {
    "hardhat": "cd ../contracts && yarn hardhat",
    "graph-node": "mustache ./config/${NETWORK:-dev}.json docker-compose.template.yml > docker-compose.yml && docker-compose up",
    "chain:start": "yarn hardhat node --watch --hostname 0.0.0.0 --export-all deployments.json",
    "chain:smoke": "yarn hardhat run scripts/smokeTest.ts --network localhost",
    "subgraph:config": "cd ../contracts && yarn subgraph:config",
    "subgraph:mustache": " mustache ./config/${NETWORK:-dev}.json subgraph.template.yaml > subgraph.yaml ",
    "subgraph:prepare": "yarn subgraph:config && yarn subgraph:mustache && rm -rf generated && yarn codegen",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ ashutoshvarma/sway-alfajores",
    "create-local": "graph create --node http://localhost:8020/ ashutoshvarma/sway-alfajores",
    "remove-local": "graph remove --node http://localhost:8020/ ashutoshvarma/sway-alfajores",
    "deploy-local": "yarn subgraph:prepare && graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 ashutoshvarma/sway-alfajores"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.25.1",
    "@graphprotocol/graph-ts": "0.24.1"
  },
  "devDependencies": {
    "@types/mustache": "^4",
    "mustache": "^4.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
